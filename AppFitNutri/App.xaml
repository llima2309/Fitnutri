<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AppFitNutri"
             xmlns:conv="clr-namespace:AppFitNutri.Converters"
             x:Class="AppFitNutri.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <conv:BoolInverseConverter x:Key="BoolInverseConverter" />
            <conv:InverseBoolConverter x:Key="InverseBoolConverter" />
            <conv:StringToBoolConverter x:Key="StringToBoolConverter" />
            <conv:NullToBoolConverter x:Key="NullToBoolConverter" />
            <conv:StatusToColorConverter x:Key="StatusToColorConverter" />
            <conv:StatusToTextConverter x:Key="StatusToTextConverter" />
            <conv:StatusIsPendenteConverter x:Key="StatusIsPendenteConverter" />
            <conv:StatusIsNotCanceladoConverter x:Key="StatusIsNotCanceladoConverter" />
            <conv:BoolToArrowConverter x:Key="BoolToArrowConverter" />
            <conv:StatusEqualsConverter x:Key="StatusEqualsConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
