<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="AppFitNutri.Views.HomePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:AppFitNutri.ViewModel"
             x:DataType="viewmodel:HomePageViewModel"
             Title="Home"
             BackgroundColor="#F8F9FA">
    
    <Grid Padding="20" RowSpacing="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackLayout Grid.Row="0" Spacing="10">
            <Label Text="{Binding WelcomeMessage}"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#2C3E50"
                   HorizontalOptions="Center" />
            
            <Label Text="Seu perfil foi criado com sucesso!"
                   FontSize="16"
                   TextColor="#27AE60"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />
        </StackLayout>

        <!-- Content Area -->
        <StackLayout Grid.Row="1" Spacing="20" VerticalOptions="CenterAndExpand">
            
            <!-- Placeholder Cards -->
            <Border BackgroundColor="White"
                    Stroke="#3498DB"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 15"
                    Padding="20">
                <Border.Shadow>
                    <Shadow Brush="Black"
                            Offset="0,2"
                            Radius="8"
                            Opacity="0.1" />
                </Border.Shadow>
                <StackLayout Spacing="10">
                    <Label Text="📊 Dashboard"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           HorizontalOptions="Center" />
                    <Label Text="Em breve: Acompanhe seu progresso nutricional"
                           FontSize="14"
                           TextColor="#7F8C8D"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />
                </StackLayout>
            </Border>

            <Border BackgroundColor="White"
                    Stroke="#E67E22"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 15"
                    Padding="20">
                <Border.Shadow>
                    <Shadow Brush="Black"
                            Offset="0,2"
                            Radius="8"
                            Opacity="0.1" />
                </Border.Shadow>
                <StackLayout Spacing="10">
                    <Label Text="🍎 Planos Alimentares"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           HorizontalOptions="Center" />
                    <Label Text="Em breve: Seus planos personalizados"
                           FontSize="14"
                           TextColor="#7F8C8D"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />
                </StackLayout>
            </Border>

            <Border BackgroundColor="White"
                    Stroke="#9B59B6"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 15"
                    Padding="20">
                <Border.Shadow>
                    <Shadow Brush="Black"
                            Offset="0,2"
                            Radius="8"
                            Opacity="0.1" />
                </Border.Shadow>
                <StackLayout Spacing="10">
                    <Label Text="💬 Consultas"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           HorizontalOptions="Center" />
                    <Label Text="Em breve: Agendamento de consultas"
                           FontSize="14"
                           TextColor="#7F8C8D"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />
                </StackLayout>
            </Border>

        </StackLayout>

        <!-- Footer -->
        <Button Grid.Row="2"
                Text="Logout"
                Command="{Binding LogoutCommand}"
                BackgroundColor="#E74C3C"
                TextColor="White"
                FontSize="16"
                HeightRequest="45"
                CornerRadius="22"
                Margin="50,0">
            <Button.Shadow>
                <Shadow Brush="Black"
                        Offset="0,2"
                        Radius="8"
                        Opacity="0.2" />
            </Button.Shadow>
        </Button>

    </Grid>
</ContentPage>
