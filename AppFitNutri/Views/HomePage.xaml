<?xml version="1.0" encoding="utf-8"?>

<ContentPage x:Class="AppFitNutri.Views.HomePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:AppFitNutri.ViewModel"
             x:DataType="viewmodel:HomePageViewModel"
             Title="FitNutri"
             Shell.NavBarIsVisible="False">

    <!-- Gradient Background -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#4A90E2" Offset="0.0" />
            <GradientStop Color="#7ED321" Offset="0.5" />
            <GradientStop Color="#4A90E2" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView Padding="24">
        <VerticalStackLayout Spacing="32" VerticalOptions="Start">
            
            <!-- Logo and Title Section -->
            <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                <!-- Logo Icon -->
                <Border BackgroundColor="White"
                        StrokeShape="RoundRectangle 24"
                        WidthRequest="80"
                        HeightRequest="80"
                        HorizontalOptions="Center"
                        Padding="0">
                    <Border.Shadow>
                        <Shadow Brush="Black"
                                Offset="0,4"
                                Radius="8"
                                Opacity="0.3" />
                    </Border.Shadow>
                    <Image Source="logofitnutri.png"
                           Aspect="AspectFit"
                           WidthRequest="64"
                           HeightRequest="64"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </Border>
                
                <!-- Title -->
                <Label Text="FitNutri"
                       FontSize="32"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center">
                    <Label.Shadow>
                        <Shadow Brush="#000" Offset="0,2" Radius="4" Opacity="0.3" />
                    </Label.Shadow>
                </Label>
            </VerticalStackLayout>

            <!-- Menu Grid (2 columns) -->
            <Grid RowSpacing="16" ColumnSpacing="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Agendamentos -->
                <Border Grid.Row="0" Grid.Column="0"
                        BackgroundColor="#FFFFFF"
                        StrokeShape="RoundRectangle 24"
                        Padding="20">
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,4" Radius="8" Opacity="0.12" />
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                        <Border BackgroundColor="#DBEAFE"
                                StrokeShape="RoundRectangle 16"
                                Padding="12"
                                WidthRequest="56"
                                HeightRequest="56"
                                HorizontalOptions="Center">
                            <Image Source="calendario.png"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>
                        <Label Text="Agendamentos"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#1E293B"
                               HorizontalTextAlignment="Center" />
                    </VerticalStackLayout>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding AgendamentosCommand}" />
                    </Border.GestureRecognizers>
                </Border>

                <!-- Video chamada (disabled) -->
                <Border Grid.Row="0" Grid.Column="1"
                        BackgroundColor="#FFFFFF"
                        StrokeShape="RoundRectangle 24"
                        Padding="20"
                        Opacity="0.6">
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,4" Radius="8" Opacity="0.12" />
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                        <Border BackgroundColor="#F3E8FF"
                                StrokeShape="RoundRectangle 16"
                                Padding="12"
                                WidthRequest="56"
                                HeightRequest="56"
                                HorizontalOptions="Center">
                            <Image Source="videochamada.png"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>
                        <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                            <Label Text="Vídeo chamada"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#1E293B"
                                   HorizontalTextAlignment="Center" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Video aulas (disabled) -->
                <Border Grid.Row="1" Grid.Column="0"
                        BackgroundColor="#FFFFFF"
                        StrokeShape="RoundRectangle 24"
                        Padding="20"
                        Opacity="0.6">
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,4" Radius="8" Opacity="0.12" />
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                        <Border BackgroundColor="#FCE7F3"
                                StrokeShape="RoundRectangle 16"
                                Padding="12"
                                WidthRequest="56"
                                HeightRequest="56"
                                HorizontalOptions="Center">
                            <Image Source="videoaula.png"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>
                        <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                            <Label Text="Vídeo aulas"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#1E293B"
                                   HorizontalTextAlignment="Center" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Treinos -->
                <Border Grid.Row="1" Grid.Column="1"
                        BackgroundColor="#FFFFFF"
                        StrokeShape="RoundRectangle 24"
                        Padding="20">
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,4" Radius="8" Opacity="0.12" />
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                        <Border BackgroundColor="#FED7AA"
                                StrokeShape="RoundRectangle 16"
                                Padding="12"
                                WidthRequest="56"
                                HeightRequest="56"
                                HorizontalOptions="Center">
                            <Image Source="academia.png"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>
                        <Label Text="Treinos"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#1E293B"
                               HorizontalTextAlignment="Center" />
                    </VerticalStackLayout>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding TreinosCommand}" />
                    </Border.GestureRecognizers>
                </Border>

                <!-- Dieta -->
                <Border Grid.Row="2" Grid.Column="0"
                        BackgroundColor="#FFFFFF"
                        StrokeShape="RoundRectangle 24"
                        Padding="20">
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,4" Radius="8" Opacity="0.12" />
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                        <Border BackgroundColor="#DCFCE7"
                                StrokeShape="RoundRectangle 16"
                                Padding="12"
                                WidthRequest="56"
                                HeightRequest="56"
                                HorizontalOptions="Center">
                            <Image Source="dieta.png"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>
                        <Label Text="Dieta"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#1E293B"
                               HorizontalTextAlignment="Center" />
                    </VerticalStackLayout>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding DietaCommand}" />
                    </Border.GestureRecognizers>
                </Border>

                <!-- Perfil -->
                <Border Grid.Row="2" Grid.Column="1"
                        BackgroundColor="#FFFFFF"
                        StrokeShape="RoundRectangle 24"
                        Padding="20">
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,4" Radius="8" Opacity="0.12" />
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                        <Border BackgroundColor="#E0E7FF"
                                StrokeShape="RoundRectangle 16"
                                Padding="12"
                                WidthRequest="56"
                                HeightRequest="56"
                                HorizontalOptions="Center">
                            <Image Source="perfil.png"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>
                        <Label Text="Perfil"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#1E293B"
                               HorizontalTextAlignment="Center" />
                    </VerticalStackLayout>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding PerfilCommand}" />
                    </Border.GestureRecognizers>
                </Border>

            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>