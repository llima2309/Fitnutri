<?xml version="1.0" encoding="utf-8"?>

<ContentPage x:Class="AppFitNutri.Views.AgendamentosPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:AppFitNutri.ViewModel"
             x:DataType="viewmodel:AgendamentosViewModel"
             Title="Agendamentos"
             Shell.NavBarIsVisible="True">

    <!-- Gradient Background -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#4A90E2" Offset="0.0" />
            <GradientStop Color="#7ED321" Offset="0.5" />
            <GradientStop Color="#4A90E2" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout Spacing="0">
        <!-- Content -->
        <ScrollView>
            <VerticalStackLayout Spacing="16" Padding="24,24,24,32">

                <!-- Meus Agendamentos Button -->
                <Button 
                    Text="Meus Agendamentos"
                    Command="{Binding SelecionarMeusAgendamentosCommand}"
                    BackgroundColor="White"
                    TextColor="#2563EB"
                    FontAttributes="Bold"
                    FontSize="18"
                    Padding="16,16"
                    CornerRadius="16">
                    <Button.Shadow>
                        <Shadow Brush="Black" Offset="0,4" Radius="8" Opacity="0.12" />
                    </Button.Shadow>
                </Button>

                <!-- Nutricionista Card -->
                <Border BackgroundColor="White"
                        StrokeShape="RoundRectangle 24"
                        Padding="20">
                    <Border.Shadow>
                        <Shadow Brush="Black"
                                Offset="0,4"
                                Radius="8"
                                Opacity="0.12" />
                    </Border.Shadow>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SelecionarNutricionistaCommand}" />
                    </Border.GestureRecognizers>

                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="16" VerticalOptions="Center">
                        
                        <!-- Icon Container -->
                        <Border Grid.Column="0"
                                BackgroundColor="#DCFCE7"
                                StrokeShape="RoundRectangle 16"
                                Padding="12"
                                WidthRequest="60"
                                HeightRequest="60">
                            <Image Source="dieta.png"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>

                        <!-- Text Content -->
                        <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                            <Label Text="Nutricionista"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#1E293B" />
                            <Label Text="Consultas nutricionais e orientação alimentar personalizada"
                                   FontSize="14"
                                   TextColor="#64748B"
                                   LineBreakMode="WordWrap" />
                        </VerticalStackLayout>

                    </Grid>
                </Border>

                <!-- Personal Trainer Card -->
                <Border BackgroundColor="White"
                        StrokeShape="RoundRectangle 24"
                        Padding="20">
                    <Border.Shadow>
                        <Shadow Brush="Black"
                                Offset="0,4"
                                Radius="8"
                                Opacity="0.12" />
                    </Border.Shadow>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SelecionarPersonalTrainerCommand}" />
                    </Border.GestureRecognizers>

                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="16" VerticalOptions="Center">
                        
                        <!-- Icon Container -->
                        <Border Grid.Column="0"
                                BackgroundColor="#FED7AA"
                                StrokeShape="RoundRectangle 16"
                                Padding="12"
                                WidthRequest="60"
                                HeightRequest="60">
                            <Image Source="academia.png"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Border>

                        <!-- Text Content -->
                        <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                            <Label Text="Personal Trainer"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#1E293B" />
                            <Label Text="Treino personalizado e acompanhamento físico especializado"
                                   FontSize="14"
                                   TextColor="#64748B"
                                   LineBreakMode="WordWrap" />
                        </VerticalStackLayout>

                    </Grid>
                </Border>

            </VerticalStackLayout>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>