<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="AppFitNutri.Views.ListaProfissionaisPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:AppFitNutri.ViewModel"
             x:DataType="viewmodel:ListaProfissionaisViewModel"
             Title="{Binding TituloPagina}"
             Shell.NavBarIsVisible="True">

    <!-- Gradient Background -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#4A90E2" Offset="0.0" />
            <GradientStop Color="#7ED321" Offset="0.5" />
            <GradientStop Color="#4A90E2" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid Padding="20" RowSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackLayout Grid.Row="0" Spacing="10" Margin="0,10,0,0">
            <Label Text="{Binding SubtituloPagina}"
                   FontSize="18"
                   TextColor="White"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Opacity="0.9" />
        </StackLayout>

        <!-- Lista de Profissionais -->
        <RefreshView Grid.Row="1" 
                     IsRefreshing="{Binding IsLoading}"
                     Command="{Binding CarregarProfissionaisCommand}">
            
            <CollectionView ItemsSource="{Binding Profissionais}"
                           BackgroundColor="Transparent">
                
                <CollectionView.EmptyView>
                    <StackLayout Padding="20" VerticalOptions="CenterAndExpand">
                        <Label Text="{Binding MensagemVazia}"
                               FontSize="16"
                               TextColor="White"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"
                               Opacity="0.8" />
                    </StackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border BackgroundColor="White"
                                StrokeShape="RoundRectangle 15"
                                Margin="0,5,0,5"
                                Padding="20">
                            <Border.Shadow>
                                <Shadow Brush="Black"
                                        Offset="0,2"
                                        Radius="8"
                                        Opacity="0.2" />
                            </Border.Shadow>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ListaProfissionaisViewModel}}, Path=SelecionarProfissionalCommand}"
                                                    CommandParameter="{Binding}" />
                            </Border.GestureRecognizers>

                            <Grid ColumnSpacing="15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Avatar/Ícone -->
                                <Border Grid.Column="0"
                                        BackgroundColor="#F0F8FF"
                                        StrokeShape="RoundRectangle 25"
                                        WidthRequest="50"
                                        HeightRequest="50">
                                    <Label Text="👤"
                                           FontSize="24"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center" />
                                </Border>

                                <!-- Informações do Profissional -->
                                <StackLayout Grid.Column="1" VerticalOptions="Center" Spacing="3">
                                    <Label Text="{Binding NomeCompleto}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="#2C3E50" />
                                    
                                    <Label Text="{Binding CidadeEstado}"
                                           FontSize="12"
                                           TextColor="#7F8C8D" />
                                    
                                    <Label Text="{Binding RegistroProfissional}"
                                           FontSize="12"
                                           TextColor="#3498DB"
                                           IsVisible="{Binding TemRegistro}" />
                                </StackLayout>

                                <!-- Seta -->
                                <Label Grid.Column="2"
                                       Text="›"
                                       FontSize="20"
                                       TextColor="#3498DB"
                                       VerticalOptions="Center" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="1"
                          IsVisible="{Binding IsLoading}"
                          IsRunning="{Binding IsLoading}"
                          Color="White"
                          VerticalOptions="Center"
                          HorizontalOptions="Center" />
    </Grid>
</ContentPage>
