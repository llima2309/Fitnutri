<?xml version="1.0" encoding="utf-8"?>

<ContentPage x:Class="AppFitNutri.Views.ListaProfissionaisPage"
             x:Name="ThisPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding TituloPagina}"
             Shell.NavBarIsVisible="True">

    <!-- Gradient Background -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#4A90E2" Offset="0.0" />
            <GradientStop Color="#7ED321" Offset="0.5" />
            <GradientStop Color="#4A90E2" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <RefreshView
        IsRefreshing="{Binding IsLoading}"
        Command="{Binding CarregarProfissionaisCommand}">

        <CollectionView ItemsSource="{Binding Profissionais}"
                        BackgroundColor="Transparent"
                        VerticalOptions="FillAndExpand">

            <CollectionView.EmptyView>
                <StackLayout Padding="20" VerticalOptions="CenterAndExpand">
                    <Label Text="{Binding MensagemVazia}"
                           FontSize="16"
                           TextColor="White"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           Opacity="0.8" />
                </StackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="0,5">
                        <Border BackgroundColor="White"
                                StrokeShape="RoundRectangle 15"
                                Padding="20">
                            <Border.Shadow>
                                <Shadow Brush="Black"
                                        Offset="0,2"
                                        Radius="8"
                                        Opacity="0.2" />
                            </Border.Shadow>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Path=BindingContext.SelecionarProfissionalCommand, Source={x:Reference Name=ThisPage}}"
                                    CommandParameter="{Binding}" />
                            </Border.GestureRecognizers>

                            <Grid ColumnSpacing="15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Avatar/Ãcone -->
                                <Border Grid.Column="0"
                                        BackgroundColor="#F0F8FF"
                                        StrokeShape="RoundRectangle 25"
                                        WidthRequest="50"
                                        HeightRequest="50">
                                    <Label Text="ðŸ‘¤"
                                           FontSize="24"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center" />
                                </Border>

                                <!-- InformaÃ§Ãµes do Profissional -->
                                <StackLayout Grid.Column="1" VerticalOptions="Center" Spacing="3">
                                    <Label Text="{Binding NomeCompleto}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="#2C3E50" />

                                    <Label Text="{Binding CidadeEstado}"
                                           FontSize="12"
                                           TextColor="#7F8C8D" />

                                    <Label Text="{Binding RegistroProfissional}"
                                           FontSize="12"
                                           TextColor="#3498DB"
                                           IsVisible="{Binding TemRegistro}" />
                                </StackLayout>

                                <!-- Seta -->
                                <Label Grid.Column="2"
                                       Text="â€º"
                                       FontSize="20"
                                       TextColor="#3498DB"
                                       VerticalOptions="Center" />
                            </Grid>
                        </Border>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>
</ContentPage>