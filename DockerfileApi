# ===== STAGE 1: build =====
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src

# Copia os arquivos de projeto para cache eficiente
COPY Fitnutri/Fitnutri.csproj ./Fitnutri/
COPY Fitnutri.test/Fitnutri.test.csproj ./Fitnutri.test/

# Restore das dependências
RUN dotnet restore Fitnutri/Fitnutri.csproj
RUN dotnet restore Fitnutri.test/Fitnutri.test.csproj

# Copia o código fonte
COPY Fitnutri/ ./Fitnutri/
COPY Fitnutri.test/ ./Fitnutri.test/

# Executa os testes - se falhar, o build para aqui
RUN dotnet test Fitnutri.test/Fitnutri.test.csproj --configuration Release --no-restore --verbosity normal

# Se chegou aqui, todos os testes passaram - continua com o build
RUN dotnet publish Fitnutri/Fitnutri.csproj -c Release -o /app/publish /p:UseAppHost=false

# ===== STAGE 2: runtime =====
FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS final
WORKDIR /app

ENV ASPNETCORE_URLS=http://0.0.0.0:8080
ENV DOTNET_EnableDiagnostics=0
EXPOSE 8080

COPY --from=build /app/publish ./
ENTRYPOINT ["dotnet", "Fitnutri.dll"]
